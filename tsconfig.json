{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "declarationDir": "dist/d",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015", "dom"
    ],
    "types": ["jasmine", "node"]
  },
  "exclude": [
    "node_modules", "dist"
  ]
}
